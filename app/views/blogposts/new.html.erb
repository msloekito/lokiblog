<h1>hello, type in your blogpost here</h1>
<%= form_for :blogpost, url: blogposts_path do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %> 
  </p>

  <p>
    <%= f.label :author %> <br>
    <%= f.text_field :author %> 
  </p>

  <p>
    <%= f.label :post %> <br>
    <%= f.text_area :post %> 
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>